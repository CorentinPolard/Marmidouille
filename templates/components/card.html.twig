<div class="card">
    <a class="card-link" href="{{ path('app_recipe_show', {id: recipe.id }) }}">
        <img class="card-img" src="{{ recipe.image }}" alt="{{ recipe.title }}">
        <h2>{{ recipe.title }}</h2>
        <p><a href="{{ path('app_recipe_difficulty', {difficultyName: recipe.difficulty.label}) }}">{{
                recipe.difficulty.label }}</a>, {{ recipe.duration }} min</p>
        <p><a href="{{ path('app_recipe_user', {user: recipe.author.id}) }}">{{ recipe.author.username }}</a></p>
    </a>
</div>