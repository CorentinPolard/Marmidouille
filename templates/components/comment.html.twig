<section class="comment">
    <h2>Commentaires</h2>

    <div>
        <h3>Ajouter un commentaire</h3>
        {{ form_start(form) }}
        {{ form_row(form.content) }}
        <button type="submit">Ajouter</button>
        {{ form_end(form) }}
    </div>

    {% for comment in recipe.comments %}
    <div class="comment-item">
        <p><strong>{{ comment.user.username }}</strong> a dit :</p>
        <p>{{ comment.content }}</p>
        <p><em>Post√© le {{ comment.createdAt|date('d/m/Y H:i') }}</em></p>
        {% if app.user and app.user == comment.user %}
        {# <a href="{{ path('app_comment_edit', { id: comment.id }) }}">Modifier</a> #}
        <div class="comment-actions">
            <a href="{{ path('app_comment_delete', { id: comment.id }) }}">Supprimer le commentaire</a>
        </div>
        {% endif %}
    </div>
    {% endfor %}
</section>