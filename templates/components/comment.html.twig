<section class="comment">
    <h2>Commentaires</h2>

    <h3>Ajouter un commentaire</h3>
    {{ form_start(form) }}
    {{ form_row(form.content) }}
    <button type="submit">Ajouter</button>
    {{ form_end(form) }}

    {% for comment in recipe.comments %}
    <div>
        <p><strong>{{ comment.user.username }}</strong> a dit :</p>
        <p>{{ comment.content }}</p>
        <p><em>Post√© le {{ comment.createdAt|date('d/m/Y H:i') }}</em></p>
        {% if app.user and app.user == comment.user %}
        {# <a href="{{ path('app_comment_edit', { id: comment.id }) }}">Modifier</a> #}
        {# <a href="{{ path('app_comment_delete', { id: comment.id }) }}">Supprimer</a> #}
        <a href="#">Supprimer</a>
        {% endif %}
    </div>
    {% endfor %}
</section>