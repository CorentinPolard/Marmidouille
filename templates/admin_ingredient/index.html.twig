{% extends 'admin-base.html.twig' %}

{% block title %}Gérer les ingrédients{% endblock %}

{% block main %}
<h1>
    Liste des ingrédients
</h1>
<a href="{{ path('app_admin_ingredient_add') }}">Ajouter un ingrédient</a>
<table>
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Ingredient</th>
            <th scope="col">actions</th>
        </tr>
    </thead>
    <tbody>
        {% for ingredient in ingredients %}
        <tr>
            <td>{{ ingredient.id }}</td>
            <td>{{ ingredient.label }}</td>
            <td>
                <a href="{{ path('app_admin_ingredient_edit', { id: ingredient.id }) }}">
                    Modifier
                </a>
                <a href="{{ path('app_admin_ingredient_delete', { id: ingredient.id }) }}">
                    Supprimer
                </a>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}